<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="checkout_cart_product_add_after">
        <observer name="checkout_cart_product_add_customer_attribute_values"
                  instance="Vkr\Kalman\Observer\AddValues\AddToCart"/>
    </event>

    <event name="catalog_product_view">
        <observer name="catalog_product_view_config_add_customer_attribute_values"
                  instance="Vkr\Kalman\Observer\AddValues\OpenPdp"/>
    </event>

    <event name="sales_order_place_after">
        <observer name="sales_order_place_after_add_customer_attribute_values"
                  instance="Vkr\Kalman\Observer\AddValues\MakeOrder"/>
    </event>


</config>
