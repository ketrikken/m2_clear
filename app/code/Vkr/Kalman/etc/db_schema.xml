<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="kalman_attributes" resource="default" engine="innodb" comment="Kalman attributes">
        <column xsi:type="int" name="attribute_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Attribute Id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="varchar" name="product_attribute" length="255" nullable="false" comment="Attribute code"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="attribute_id"/>
        </constraint>
    </table>

    <table name="kalman_customer_attributes" resource="default" engine="innodb" comment="Kalman attributes">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Id"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false"
                comment="customer_id"/>
        <column xsi:type="varchar" name="attributes" nullable="false" length="1024" comment="Attributes"/>

        <column xsi:type="varchar" name="oldX" nullable="true" length="1024" comment="kalman_old"/>
        <column xsi:type="varchar" name="newX" nullable="true" length="1024" comment="kalman_old"/>
        <column xsi:type="varchar" name="newP" nullable="true" length="1024" comment="kalman_old"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="kalman_customer_attributes_customer_id_customer_entity_entity_id"
                    table="kalman_customer_attributes"
                    column="customer_id"
                    referenceTable="customer_entity"
                    referenceColumn="entity_id"
                    onDelete="CASCADE" />
    </table>


</schema>
